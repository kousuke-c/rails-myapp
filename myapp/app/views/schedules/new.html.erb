<h1>新規スケジュール作成ページ</h1>
<h2>スケジュール新規作成</h2>
   <%= render "shared/error", obj: @plan %>
 <%= form_with url: '',local: true ,method: @plan do |f| %>　　<!--form_forだとうまく送れなかった{form_for '@plan' do |f|}-->
      <table class = "new">
        <tr>
          <th><%= f.label :title ,"タイトル" %></th>
          <td><%= f.text_field :title ,size:"50"%></td>
        </tr>
        <tr>
          <th><%= f.label :start ,"開始日" %></th>
          <td><%= f.date_field :start,size:"100"%></td>
        </tr>
 
        <tr>
          <th><%= f.label :end ,"終了日" %></th>
          <td><%= f.date_field :end,size:"100"%></td>
        </tr>
        <tr>
        <th><%= f.label :dayAll ,"終日" %></th>
       <td><%= f.check_box :dayAll%><p>終日の場合はチェックをします</p></td>
       </tr>
        <tr>
          <th><%= f.label :memo ,"スケジュールメモ" %></th>
          <td><%= f.text_area :memo,size:"50x10"%></td>
        </tr>
      </table>
    <ul>
      <li><%= f.submit "登録完了する"%></li>
      <li><%= link_to "スケジュール一覧に戻る","/"%></li>
    </ul>
 <%end%>
 
